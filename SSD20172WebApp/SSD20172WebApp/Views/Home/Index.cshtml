@{
    ViewData["Title"] = "Inicio";
}

<div class="container-fluid">
  <div class="row">
      <h1>Sistema de Soporte de Decisión</h1>
    
    <div class="form-group col-md-2">
      <label>Modo</label>
      <select class="form-control">
        <option value="basic">Básico</option>
        <option value="advance">Avanzado</option>
      </select>
    </div>

    <div class="form-group col-md-2">
      <label>Agentes sin experiencia</label> <input id="numnew" class="form-control" placeholder="Ingrese número de agentes sin experiencia">
      <label>Agentes expertos</label> <input id="numexp" class="form-control" placeholder="Ingrese número de agentes expertos">
    </div>

   <button id="btnexecute" type="button" class="btn btn-success"> Ejecutar </button>
    
  </div>
</div>

@section Scripts {
  <script>
    $("#btnexecute").click(function () { 
      $.ajax({
        url: baseUrl + "run",
        type: "get",
        data: {
          numNewAgents: $("#numnew").val(),
          numExpertAgents: $("#numexp").val()
        },
        success: function (response) { 
          console.log(response);
        },
        error: function (xhr) { 
          console.log(xhr);
        }
      });
    });
  </script>
}